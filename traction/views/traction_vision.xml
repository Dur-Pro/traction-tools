<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="traction_organizer_form" model="ir.ui.view">
        <field name="name">traction.organizer.form</field>
        <field name="model">traction.organizer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" placeholder="Name"/>
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>

                    <div class="col-16 text-center">
                        <h1>VISION</h1>
                    </div>
                </sheet>


            </form>
        </field>
    </record>

    <record id="traction_organizer_action" model="ir.actions.act_window">
        <field name="name">traction organizer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">traction.vision</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="traction_organizer_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">

            </p>
        </field>
    </record>

    <menuitem id="Vision_organizer"
              name="Vision"
              parent="traction_organizer"
              action="traction_organizer_action"
              sequence="30"/>

</odoo>