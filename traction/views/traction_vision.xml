<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="traction_vision_form" model="ir.ui.view">
        <field name="name">traction.vision.form</field>
        <field name="model">traction.vision</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vision_range"/>
                            <field name="target_date"/>
                        </group>
                        <group>
                            <field name="target_revenue"/>
                        </group>
                        <label for="target_picture"/>
                        <field name="target_picture"/>
                    </group>
                    <group>
                        <field name="measurable_ids">
                            <tree string="Measurable">
                                <field name="name"/>
                                <field name="goal"/>
                                <field name="unit"/>
                                <field name="level10_ids"/>
                            </tree>
                        </field>
                        <field name="rock_ids">
                            <tree string="Rock">
                                <field name="name"/>
                                <field name="user_id"/>
                            </tree>
                        </field>
                        <field name="target_picture"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>