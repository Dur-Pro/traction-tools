<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="traction_issue_view_form" model="ir.ui.view">
        <field name="name">traction.calendar.event.ids.view.form</field>
        <field name="model">traction.issue</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" options="{'clickable': True}" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                    </div>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            Issue
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group col="2">
                        <group>
                            <field name="issues_list_id"/>
                            <field name="date_raised" widget="date"/>
                            <field invisible="state != 'solved'" name="date_solved" widget="date"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="raised_by"/>
                            <field name="related_record"/>
                        </group>
                    </group>
                    <group invisible="id == False" name="ids">
                        <field class="oe-bordered-editor" name="identify"/>
                        <field class="oe-bordered-editor" name="discuss"/>
                        <field class="oe-bordered-editor" name="solve"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form></field>
    </record>
    <record id="traction_issue_view_form_simple_modif" model="ir.ui.view">
        <field name="name">traction.issue.view.form.simple.modif</field>
        <field name="model">traction.issue</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            Issue
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group col="2">
                        <group>
                            <field name="issues_list_id"/>
                            <field name="date_raised"/>
                            <field name="related_record"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button class="btn-primary" name="save_and_close" string="Save" type="object"/>
                    <button class="btn-secondary" special="cancel" string="Cancel"/>
                </footer>
            </form></field>
    </record>
    <record id="traction_issue_view_tree" model="ir.ui.view">
        <field name="name">traction.issue.view.tree</field>
        <field name="model">traction.issue</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'solved'" decoration-warning="state != 'solved'" string="Issues">
                <field name="sequence" widget="handle"/>
                <field invisible="1" name="state"/>
                <field name="name"/>
                <field name="raised_by"/>
                <field name="date_raised"/>
                <field name="date_solved"/>
            </tree></field>
    </record>
    <record id="traction_issue_view_kanban" model="ir.ui.view">
        <field name="name">traction.issue.view.kanban</field>
        <field name="model">traction.issue</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id">
                <field name="state"/>
                <field name="stage_id"/>
                <field name="tag_ids"/>
                <field name="name"/>
                <field name="raised_by"/>
                <field name="date_raised"/>
                <field name="date_solved"/>
                <field name="days_open"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record oe_kanban_content">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <separator/>
                                        <div>
                                            <span>
                                                Raised by:
                                                <field name="raised_by" widget="many2one_avatar_user"/>
                                                <span t-out="record.raised_by.value"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div>
                                        <span>
                                            Raised on:
                                            <field name="date_raised" widget="date"/>
                                        </span>
                                    </div>
                                    <div>
                                        <span t-attf-class="#{record.days_open.raw_value > 120 ? 'text-danger' : record.days_open.raw_value > 60 ? 'text-warning' : ''}">
                                            Days open:
                                            <field name="days_open"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="oe_kanban_bottom">
                                    <span class="oe_kanban_bottom_left">
                                        <field name="tag_ids" widget="many2many_tags"/>
                                        <span>
                                            Last updated:
                                            <field name="write_date" widget="date"/>
                                        </span>
                                    </span>
                                    <div class="oe_kanban_bottom_right float-right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban></field>
    </record>
    <record id="traction_issue_view_activity" model="ir.ui.view">
        <field name="name">traction.issue.view.activity</field>
        <field name="model">traction.issue</field>
        <field name="arch" type="xml">
            <activity string="Issues">
                <templates>
                    <div t-name="activity-box">
                        <div>
                            <field display="full" name="name"/>
                            <field display="full" muted="1" name="issues_list_id"/>
                        </div>
                    </div>
                </templates>
            </activity></field>
    </record>
</odoo>
