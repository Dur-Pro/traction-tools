<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="traction_team_form" model="ir.ui.view">
        <field name="name">traction.team.form</field>
        <field name="model">traction.team</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box">
                    </div>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div>
                        <field name="channel_ids" invisible="1"/>
                    </div>
                    <notebook>
                        <page string="Members" name="member_ids">
                            <field name="member_ids">
                                <tree string="Members">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Measurable" name="measurable_ids">
                            <field name="measurable_ids">
                                <tree string="Measurable">
                                    <field name="name"/>
                                    <field name="goal"/>
                                    <!--                                    <field name="goal_unit"/>-->
                                    <field name="team_ids"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Issues and Headlines" name="issue_ids">
                            <label for="headline_ids">Headlines</label>
                            <field name="headline_ids" string="Headlines">
                                <tree string="Headlines">
                                    <field name="summary"/>
                                    <field name="activity_type_id"/>
                                    <field name="write_uid"/>
                                </tree>
                            </field>
                            <label for="issue_ids">Issues</label>
                            <field name="issue_ids" string="Issues">
                                <tree string="Issues">
                                    <field name="summary"/>
                                    <field name="write_uid"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Meeting">
                            <field name="meeting_ids" string="Meeting">
                                <tree string="Meeting" editable="bottom">
                                    <field name="name"/>
                                    <field name="start" widget="datetime"/>
                                    <field name="duration" widget="float"/>
                                    <field name="stop" widget="datetime" optional="hide"/>
                                    <field name="team_id" optional="hidden"/>
                                    <field name="state" invisible="1"/>
                                    <button name="action_start" type="object"
                                            attrs="{'invisible': [('state', 'in', ('in_progress', 'done'))]}"
                                            class="btn btn-primary" string="Start"/>
                                    <button name="view_details" class="fa fa-external-link"
                                            title="View Details" type="object"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>