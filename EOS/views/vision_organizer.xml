<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="traction_organizer_form" model="ir.ui.view">
        <field name="name">traction.organizer.form</field>
        <field name="model">traction.organizer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" placeholder="Name"/>
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>

                    <div class="col-16 text-center">
                        <h1>VISION</h1>
                    </div>
                    <br></br>

                    <group >
                        <group>

                            <field name="core_values_ids">
                                <tree editable="bottom">
                                    <field name="core_values"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <span class="o_form_label o_td_label" name="Core focus">
                                <b>Core Focus</b>
                            </span>
                            <div class="o_address_format">
                                <field name="purpose" placeholder="Purpose/Cause/Passion" class="o_address_street"/>
                                <field name="niche" placeholder="Our Niche" class="o_address_street"/>
                            </div>
                            <field name="target"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Strategy 1">
                            <label for="target_market"/>
                            <field name="target_market" string="Target Market/The List:"/>
                            <field name="three_uniques_ids">
                                <tree editable="bottom">
                                    <field name="three_uniques"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="proven_process"/>

                                    <field name="guarantee"/>
                                </group>
                            </group>



                        </page>


                        <page string="Strategy 2">
                            <label for="target_market"/>
                            <field name="target_market" string="Target Market/The List:"/>
                            <field name="three_uniques_ids">
                                <tree editable="bottom">
                                    <field name="three_uniques"/>
                                </tree>
                            </field>
                             <group>
                                <group>
                                    <field name="proven_process"/>

                                    <field name="guarantee"/>
                                </group>
                            </group>


                        </page>
                        <page string="Strategy 3">
                            <label for="target_market"/>
                            <field name="target_market" string="Target Market/The List:"/>
                            <field name="three_uniques_ids">
                                <tree editable="bottom">
                                    <field name="three_uniques"/>
                                </tree>
                            </field>
                             <group>
                                <group>
                                    <field name="proven_process"/>

                                    <field name="guarantee"/>
                                </group>
                            </group>


                        </page>
                        <page string="Strategy 4">
                            <label for="target_market"/>
                            <field name="target_market" string="Target Market/The List:"/>
                            <field name="three_uniques_ids">
                                <tree editable="bottom">
                                    <field name="three_uniques"/>
                                </tree>
                            </field>
                             <group>
                                <group>
                                    <field name="proven_process"/>

                                    <field name="guarantee"/>
                                </group>
                            </group>


                        </page>
                        <page string="Strategy 5">
                            <label for="target_market"/>
                            <field name="target_market" string="Target Market/The List:"/>
                            <field name="three_uniques_ids">
                                <tree editable="bottom">
                                    <field name="three_uniques"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="proven_process"/>

                                    <field name="guarantee"/>
                                </group>
                            </group>

                        </page>


                    </notebook>
                                                        <br></br><br></br>

                    <div class="col-16 text-center">
                        <h1>3 YEAR PICTURE</h1>
                    </div>
                    <group>
                        <group>
                            <field name="future_date"/>
                            <field name="revenue"/>
                            <field name="profit"/>
                            <field name="measurable" widget="many2many_tags"/>
                        </group>


                    </group>


                </sheet>


            </form>
        </field>
    </record>

    <record id="traction_organizer_actions" model="ir.actions.act_window">
        <field name="name">traction organizer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">traction.organizer</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="traction_organizer_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">

            </p>
        </field>
    </record>

    <menuitem id="traction_organizer_root"
              name="EOS"
              sequence="2"/>
    <menuitem id="traction_organizer"
              name="V/TO"
              parent="traction_organizer_root"

              sequence="2"/>
    <menuitem id="Vision_organizer"
              name="Vision"
              parent="traction_organizer"
              action="traction_organizer_actions"
              sequence="2"/>


</odoo>