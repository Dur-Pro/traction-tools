<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="traction_view_form" model="ir.ui.view">
        <field name="name">traction.view.form</field>
        <field name="model">traction.organizer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="col-8 text-center">
                        <h1>1 year Plan</h1>
                    </div>


                    <group>

                        <group>
                        <field name='one_yr_planning_date'/>

                        <field name="one_yr_revenue"/>
                        <field name="one_yr_profit"/>
                        <field name="measurable" widget="many2many_tags"/>
                        </group>
                        <group>

                        </group>

                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="traction_vision_organizer_actions" model="ir.actions.act_window">
        <field name="name">traction vision organizer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">traction.organizer</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="traction_view_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">

            </p>
        </field>
    </record>

    <menuitem id="traction_vision_organizer"
              name="Traction"
              parent="traction_organizer"
              action="traction_vision_organizer_actions"
              sequence="2"/>
